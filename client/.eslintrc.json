{
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "env": {
    "jest": true,
    "browser": true,
    "es6": true
  },
  "extends": [
    "plugin:react/recommended",
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "jest", 
    "react"
  ],
  "rules": {
    "no-unused-vars": ["error", { "vars": "local", "args": "after-used", "argsIgnorePattern": "_" }],
    "react/prop-types": 0,
    "indent": [
      "error", 2,
      { "SwitchCase":  1 }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ]
  }
}
