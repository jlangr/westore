{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["plugin:react/recommended","eslint:recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "no-unused-vars": ["error", { "vars": "local", "args": "after-used", "argsIgnorePattern": "_" }],
    "indent": [
      "error", 2,
      { "SwitchCase":  1 }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ]
  }
}
